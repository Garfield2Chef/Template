<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/teal</item>
        <item name="colorAccent">@color/teal</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/teal</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/teal</item>
        <item name="colorAccent">@color/teal</item>
    </style>

    <style name="NostatusTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/teal</item>
        <item name="colorAccent">@color/teal</item>
    </style>

    <style name="Mybutton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/btn_shape</item>
        <item name="android:radius">15dp</item>
        <item name="android:textColor">@color/whitesmoke</item>
    </style>

    <!--透明背景-->
    <style name="translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
